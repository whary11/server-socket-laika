<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chat Cliente</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        [v-cloak] {
            display: none;
        }
    </style>
</head>

<body>
    <div id="app" v-cloak class="container">
        <div class="row">
            <div class="col-md-12">
                <div v-for="(item, index) in message" :key="index">
                    <p class="text-left" v-if="item.id == user.from">
                        <span>{{item.id}} Escribió: {{item.message}}</span>
                    </p>
                    <p class="text-right" v-else>
                        <span>{{item.id}} Escribió: {{item.message}}</span>
                    </p>
                </div>
                <div class="form-group col-md-12">
                    <input name="" class="form-control" type="text" placeholder="Escribe tu mensaje" v-model="user.message" @keyPress.enter="new_message()">
                </div>
            </div>
            <input type="file" name="image" @change="getUrlImage" id="image" class="btn btn-success">
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

    <script src="//cdn.jsdelivr.net/es6-promise/4.0.5/es6-promise.auto.min.js"></script>
    <script src="//cdn.jsdelivr.net/fetch/0.9.0/fetch.min.js"></script>
    <script src="//cdn.jsdelivr.net/react/15.4.2/react.min.js"></script>
    <script src="//cdn.jsdelivr.net/react/15.4.2/react-dom.min.js"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/graphiql/0.13.0/graphiql.min.js" charset="utf-8"></script> -->

    <script>
        new Vue({
            el: '#app',
            data: {
                socket: null,
                message: [],

                user: {
                    order_id: 1,
                    from: 'turner71@example.com',
                    to: '',
                    message: '',
                    role: 'CUSTOMER'
                }
            },
            mounted() {
                this.socket = io()
                this.socket.on('welcome', msg => {
                    console.log(msg)
                    msg.map(m => {
                        this.message.push(m)
                    })
                })

                this.socket.on('new_message', msg => {
                    this.message.push(msg)
                })

                this.socket.on('your_order', msg => { // Sockect con la orden que abre este chat en doble via
                    //this.message.push(msg)

                    this.user.to = msg.order.domiciliary_email
                    console.log(msg)
                })
                this.socket.emit('Order', this.user)
            },
            methods: {
                new_message() {
                    this.message.push({
                        message: this.user.message,
                        id: this.user.from
                    })
                    this.socket.emit('new_message', this.user)
                    this.user.message = ''
                },

                getUrlImage(e) {
                    let formData = new FormData();
                    formData.append("image", $("#image")[0].files[0]);
                    // formData.append('query', $("#image")[0].files[0]);
                    // formData.append('variables', JSON.stringify({}));
                    // formData.append('debugName',  '');
                    // formData.append('operationName', '');
                    //formData.append("map", {
                    //  "0": $("#image")[0].files[0]
                    //});
                    //formData.append("operations", {
                    //  "query": "mutation($image:Upload!){\n  uploadImageMessage(image:$image)\n}",
                    //"variables": {
                    //  "image": ""
                    // }
                    //});


                    axios.defaults.headers.post['Content-Type'] = "multipart/form-data";
                    axios.post('http://127.0.0.1:8000/graphql/chat_messages', {
                            query: `mutation uploadImageMessage($image:Upload!){ 
                                uploadImageMessage(image:$image){

                                    message
                                  }}
                            `,
                            variables: {
                                image: $("#image")[0].files[0]
                            }
                        })
                        .then(res => {
                            console.log(res)
                        })
                        .catch(err => {
                            console.error(err);
                        })
                }
            },
        })
    </script>
</body>